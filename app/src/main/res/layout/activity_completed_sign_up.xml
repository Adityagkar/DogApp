<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gitsteintechnologies.domigo.CompletedSignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/finalpriceback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/cast_expanded_controller_ad_label_background_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/acme"
                android:text="Registered Successfully !"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="fill_vertical|center_horizontal"
                android:layout_weight="1"
                app:srcCompat="@drawable/tickfinal" />

            <Button
                android:id="@+id/proceedbtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/email3"
                android:layout_alignStart="@+id/email3"
                android:layout_below="@+id/email3"
                android:layout_marginTop="34dp"
                android:layout_weight="1"
                android:background="#004a80"
                android:fontFamily="@font/acme"
                android:shadowColor="@android:color/background_dark"
                android:shadowRadius="30"
                android:text="Proceed to Login"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
